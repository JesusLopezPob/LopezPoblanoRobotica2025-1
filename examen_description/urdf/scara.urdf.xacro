<?xml version="1.0" encoding="utf-8"?>

<robot name="robot_scara" xmlns:xacros="http://ros/wiki/xacro" >

    <link name="base_link">
        <visual>
            <origin xyz="0.0 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.12 0.15"/>             
            </geometry>
            <material name="brown">
                <color rgba="0.1 0.2 0.2 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.075" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.1 0.12 0.15"/>             
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/> 
        </inertial>
    </link>

    <link name="link_1">
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.5 0.05 0.05"/>             
            </geometry>
            <material name="red">
                <color rgba="1.0 0.0 0.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.025 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.05 0.05"/>             
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/> 
        </inertial>
    </link>

    <link name="link_2">
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.05 0.05"/>            
            </geometry>
            <material name="green">
                <color rgba="0.0 1.0 0.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.025 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.05 0.05"/>            
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/> 
        </inertial>
    </link>

    <link name="link_3">
        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.05 0.05"/>            
            </geometry>
            <material name="blue">
                <color rgba="0.0 0.0 1.0 1.0" />
            </material>      
        </visual>
        <collision>
            <origin xyz="0.025 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.25 0.05 0.05"/>            
            </geometry>          
        </collision>
        <inertial>
            <mass value="0.3"/>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
